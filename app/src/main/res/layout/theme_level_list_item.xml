<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/level_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Уровень 1." />

    <TextView
        android:id="@+id/level_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/level_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/level_name_text_view"
        tools:text="Сложение чисел" />

    <ImageView
        android:id="@+id/test_complete_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow" />

    <ImageView
        android:id="@+id/test_quality_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/test_complete_image_view"
        app:layout_constraintEnd_toStartOf="@+id/test_complete_image_view"
        app:layout_constraintTop_toTopOf="@+id/test_complete_image_view"
        tools:srcCompat="@drawable/ic_good_test" />
</androidx.constraintlayout.widget.ConstraintLayout>